@model Models.ReservaModel

@{
    ViewBag.Title = "Crear";
    ViewBag.TitlePag = "Nueva Reserva";
    Layout = "~/Views/Shared/_Plantilla.cshtml";


    var clientes = new List<SelectListItem>();
    clientes.Add(new SelectListItem() { Text = "Todos", Value = "" });
    foreach (var item in ViewBag.Clientes)
    {
        clientes.Add(new SelectListItem() { Text = item.texto, Value = item.valor });
    }

    var habitaciones = new List<SelectListItem>();
    habitaciones.Add(new SelectListItem() { Text = "Todas", Value = "" });
    foreach (var item in ViewBag.Habitaciones)
    {
        habitaciones.Add(new SelectListItem() { Text = item.texto, Value = item.valor });
    }

    var estados = new List<SelectListItem>();
    estados.Add(new SelectListItem() { Text = "Todos", Value = "" });
    estados.Add(new SelectListItem() { Text = "Pendiente", Value = "3" });
    estados.Add(new SelectListItem() { Text = "Abonado", Value = "0" });


}

@using (Html.BeginForm(FormMethod.Post))
{
    <div class="form-group">
        <label>Clientes:</label>
        @Html.DropDownListFor(model => model.idcliente,
     (List<SelectListItem>)clientes,
     new { @class = "form-control", @required = true })

    </div>

    <div class="form-group">
        <label>Habitaciones:</label>
        @Html.DropDownListFor(model => model.idhabitacion,
     (List<SelectListItem>)habitaciones,
     new { @class = "form-control", @required = true })

    </div>
    <div class="form-group">

        <label>Fecha Checkin:</label>
        @Html.TextBoxFor(model => model.fecha, new { @class = "form-control", @required = true, @type = "date" })
    </div>
    <div class="form-group">
        <label>Numero de dias:</label>
        @Html.TextBoxFor(model => model.numdias, new { @class = "form-control", @required = true, @type = "number" })
    </div>
    <div class="form-group">
        <label>Fecha Cehckout:</label>
        @Html.TextBoxFor(model => model.fechaout, new { @class = "form-control", @required = true, @type = "date" })
    </div>
    <div class="form-group">
        <label>Total:</label>
        @Html.TextBoxFor(model => model.total, new { @class = "form-control", @required = true, @type = "text" })
    </div>
    <div class="form-group">
        <label>Estado:</label>
        @Html.DropDownListFor(model => model.estado,
    (List<SelectListItem>)estados,
    new { @class = "form-control", @required = true })
    </div>
    <div class="form-group">

        <input class="btn btn-danger" type="submit" value="Confirmar" />

    </div>


}