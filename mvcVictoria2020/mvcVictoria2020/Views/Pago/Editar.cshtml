@model Models.PagoModel

@{
    ViewBag.Title = "Editar";
    ViewBag.TitlePag = "Editar Pago";
    Layout = "~/Views/Shared/_Plantilla.cshtml";




    var reservas = new List<SelectListItem>();
    reservas.Add(new SelectListItem() { Text = "Todas", Value = "" });
    foreach (var item in ViewBag.Reservas)
    {
        reservas.Add(new SelectListItem() { Text = item.texto, Value = item.valor });
    }

    var estado = new List<SelectListItem>();
    estado.Add(new SelectListItem() { Text = "Todos", Value = "0" });
    estado.Add(new SelectListItem() { Text = "Pago Completo", Value = "1" });
    estado.Add(new SelectListItem() { Text = "Abonado", Value = "2" });


}

@using (Html.BeginForm(FormMethod.Post))
{
    <div class="form-group">
        <label>Lista de Reservas:</label>
        @Html.DropDownListFor(model => model.idreserva,
     (List<SelectListItem>)reservas,
     new { @class = "form-control", @required = true })

    </div>

    <div class="form-group">
        <label>Monto Pagado:</label>
        @Html.TextBoxFor(model => model.montopago, new { @class = "form-control", @required = true, @type = "number" })
    </div>

    <div class="form-group">
        <label>Estado:</label>
        @Html.DropDownListFor(model => model.estado,
    (List<SelectListItem>)estado,
    new { @class = "form-control", @required = true })
    </div>

    <div class="form-group">

        <input class="btn btn-danger" type="submit" value="Confirmar" />

    </div>

}


